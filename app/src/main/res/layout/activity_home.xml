<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/sidebar"
            android:background="#10000000"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/menubutton">

        </ImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/story_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nbold"
                android:text="Test"
                android:textSize="19sp"
                android:textColorHint="#DDDDDD"
                android:textColor="@color/grey_black"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="#DDDDDD"
                />

            <TextView
                android:id="@+id/story_content_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nbold"
                android:text="         "
                android:textSize="13sp"
                android:textColorHint="#DDDDDD"
                android:textColor="@color/black"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="#DDDDDD"
                />

            <ImageView
                android:id="@+id/story_image"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:background="@null"
                android:textColor="@color/grey_black"
                android:fontFamily="@font/nmed"
                android:gravity="center" />


            <TextView
                android:id="@+id/story_content_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nbold"
                android:text="    "
                android:textSize="13sp"
                android:textColorHint="#DDDDDD"
                android:textColor="@color/black"
                android:layout_marginTop="20dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:backgroundTint="#DDDDDD"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">

                <Button
                    android:id="@+id/mission1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="30dp"
                    android:layout_marginStart="30dp"
                    android:text="1번 미션" />

                <Button
                    android:id="@+id/mission3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:text="2번 미션" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <include layout = "@layout/activity_sidebar"/>

</androidx.drawerlayout.widget.DrawerLayout>
