<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="240dp"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:background="#1D000000"
    android:id="@+id/sidebar_open"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="40dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/sidebar_profile"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/scrollbarprofile" />

            <TextView
                android:id="@+id/sidbar_userName"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginStart="15dp"
                android:layout_marginBottom="4dp"
                android:fontFamily="@font/nmed"
                android:text="닉네임"
                android:textColor="@color/black"
                android:textSize="15sp" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_mypage"
            android:background="@color/light_grey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="마이페이지"
            android:gravity="left"
            android:fontFamily="@font/nmed"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btn_rank"
            android:background="@color/light_grey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:fontFamily="@font/nmed"
            android:textColor="@color/grey_black"
            android:textSize="15sp"
            android:text="랭킹"/>

        <Button
            android:id="@+id/btn_shop"
            android:background="@color/light_grey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:fontFamily="@font/nmed"
            android:textColor="@color/grey_black"
            android:textSize="15sp"
            android:text="상점"/>

        <Button
            android:id="@+id/btn_post"
            android:background="@color/light_grey"
            android:fontFamily="@font/nmed"
            android:textColor="@color/grey_black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:textSize="15sp"
            android:text="게시판"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="252dp"
        android:layout_height="match_parent">
        <ImageButton
            android:layout_marginLeft="80dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/backgroundwhite"
            >

        </ImageButton>
    </LinearLayout>



</LinearLayout>