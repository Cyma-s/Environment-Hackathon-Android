<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#002196F3"
    android:orientation="vertical"
    tools:context=".ShopActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back_button"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/backbutton" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp">


            <TextView
                android:id="@+id/shop_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nbold"
                android:text="상점"
                android:textColor="@color/grey_black"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/teal_200" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="#5BFBED6A"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/recommended_item_picture"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:background="#FFFFFF"
            android:src="@drawable/recommend_product" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nbold"
                android:includeFontPadding="false"
                android:text="추천상품"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/shop_product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/nbold"
                android:includeFontPadding="false"
                android:text="친환경 아쿠아 쩰리 쪼리 4종"
                android:textColor="@color/black"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/shop_product_information"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/nmed"
                android:includeFontPadding="false"
                android:text="더운 여름! 운동화 말고 시원하게 쪼리를 신고 걷기 미션 같이 해봐요!!"
                android:textColor="@color/black"
                android:textSize="9sp" />

            <TextView
                android:id="@+id/shop_product_sale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/nbold"
                android:includeFontPadding="false"
                android:text="이 제품은 수익금의 4 %가 기부됩니다."
                android:textColor="@color/grey_black"
                android:textSize="11sp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/teal_200" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00FFFFFF"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nbold"
                android:includeFontPadding="false"
                android:text="이외 추천상품"
                android:textColor="@color/grey_black"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:background="#00DDDDDD"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/first_item"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_marginStart="30dp"
                android:src="@drawable/first_product" />

            <ImageView
                android:id="@+id/second_item"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="20dp"
                android:src="@drawable/second_product" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/first_item_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="45dp"
                android:fontFamily="@font/nmed"
                android:includeFontPadding="false"
                android:text="무지개 친환경 머그컵"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/second_item_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:fontFamily="@font/nmed"
                android:includeFontPadding="false"
                android:text="가을 베이직 텀블러"
                android:textColor="@color/black"
                android:textSize="13sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:background="#00FFFFFF"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/third_item"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_marginStart="30dp"
                android:src="@drawable/third_product" />

            <ImageView
                android:id="@+id/fourth_item"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="20dp"
                android:src="@drawable/fourth_product" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/third_item_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="80dp"
                android:fontFamily="@font/nmed"
                android:includeFontPadding="false"
                android:text="충전식 선풍기"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/fourth_item_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:fontFamily="@font/nmed"
                android:includeFontPadding="false"
                android:text="친환경 무선 선풍기"
                android:textColor="@color/black"
                android:textSize="13sp" />


        </LinearLayout>


    </LinearLayout>


</LinearLayout>